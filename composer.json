{
	"name": "php-mq/server",
	"description": "PHP message queue server",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"license": "MIT",
	"authors": [
		{
			"name": "Holger Woltersdorf",
			"email": "hw@hollo.me"
		}
	],
	"require": {
		"php": ">=7.1",
		"psr/log": "^1.0.2",
		"roave/security-advisories": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"PHPMQ\\Server\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"PHPMQ\\Server\\Tests\\": "tests/"
		}
	},
	"require-dev": {
		"tm/tooly-composer-script": "^1.0"
	},
	"scripts": {
		"post-install-cmd": "Tooly\\ScriptHandler::installPharTools",
		"post-update-cmd": "Tooly\\ScriptHandler::installPharTools"
	},
	"extra": {
		"tools": {
			"phpunit": {
				"url": "https://phar.phpunit.de/phpunit-6.2.1.phar",
				"only-dev": true
			},
			"coveralls": {
				"url": "https://github.com/satooshi/php-coveralls/releases/download/v1.0.1/coveralls.phar",
				"only-dev": true
			},
			"phpmetrics": {
				"url": "https://github.com/phpmetrics/PhpMetrics/releases/download/v2.2.0/phpmetrics.phar",
				"only-dev": true
			}
		}
	}
}
